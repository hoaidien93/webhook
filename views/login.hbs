<form method="POST">
    <input name="email" type="email">
    <input name="password" type="password">
    <input type="hidden" value="{{redirect}}" name="redirect">
    <input type="submit" />
</form>

<script>
    let token = "{{token}}";
    let email = "{{email}}";

    window.addEventListener("message", function (event) {
        if (token && email) {
            event.source.postMessage(JSON.stringify({ token, email }), event.origin);
        }
    });
</script>